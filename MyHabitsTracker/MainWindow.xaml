<Window x:Class="MyHabitsTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Habits Tracker" Height="720" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <Button x:Name="BtnNew" Width="100" Margin="0,0,8,0">New Habit</Button>
            <Button x:Name="BtnEdit" Width="100" Margin="0,0,8,0">Edit Habit</Button>
            <Button x:Name="BtnDelete" Width="100" Margin="0,0,8,0">Delete Habit</Button>
            <Button x:Name="BtnExport" Width="120" Margin="0,0,8,0">Export CSV</Button>
            <Button x:Name="BtnStatistics" Width="100" Margin="0,0,8,0">Statistics</Button>
            <TextBlock VerticalAlignment="Center" Margin="8,0,0,0" FontStyle="Italic" Foreground="Gray">
                Double-click a row to add/edit today's entry
            </TextBlock>
        </StackPanel>

        <DataGrid x:Name="DgHabits"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*"/>
                <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="1.6*"/>
                <DataGridTextColumn Header="Positive" Binding="{Binding PositiveText}" Width="80"/>
                <DataGridTextColumn Header="Today" Binding="{Binding TodayStatus}" Width="140"/>
                <DataGridTextColumn Header="Current Streak" Binding="{Binding CurrentStreak}" Width="100"/>
                <DataGridTextColumn Header="Best Streak" Binding="{Binding BestStreak}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Margin="0,8,0,0" BorderThickness="1" BorderBrush="LightGray" CornerRadius="4" Padding="8" Background="#FFF">
            <StackPanel>
                <TextBlock x:Name="TbDescTitle" Text="Description" FontWeight="Bold" Visibility="Collapsed" />
                <TextBlock x:Name="TbDescription" TextWrapping="Wrap" Visibility="Collapsed" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
