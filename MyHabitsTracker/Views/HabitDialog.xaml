<Window x:Class="MyHabitsTracker.Views.HabitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Habit" Height="420" Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,8">
            <TextBlock Text="Title" Margin="0,0,0,4"/>
            <TextBox x:Name="TbTitle" Height="26"/>

            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <StackPanel Width="220">
                    <TextBlock Text="Type" Margin="0,0,0,4"/>
                    <ComboBox x:Name="CbType" Height="26">
                        <ComboBoxItem>Checkbox</ComboBoxItem>
                        <ComboBoxItem>Numerical</ComboBoxItem>
                        <ComboBoxItem>Duration (hh:mm:ss)</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="12,0,0,0" VerticalAlignment="Top">
                    <TextBlock Text="Options" Margin="0,0,0,4"/>
                    <CheckBox x:Name="CbPositive" Content="Positive habit" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <StackPanel x:Name="SpTargetNumeric" Orientation="Horizontal" Margin="0,8,0,0" Visibility="Collapsed">
                <TextBlock Text="Numeric target:" VerticalAlignment="Center" Width="120"/>
                <TextBox x:Name="TbTargetNumeric" Width="200" Height="26"/>
            </StackPanel>

            <StackPanel x:Name="SpTargetDuration" Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center" Visibility="Collapsed">
                <TextBlock Text="Duration target:" VerticalAlignment="Center" Width="120"/>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,8,0">
                        <TextBlock Text="Hours" FontSize="10" HorizontalAlignment="Center"/>
                        <TextBox x:Name="TbTargetHours" Width="50" Height="26"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,8,0">
                        <TextBlock Text="Minutes" FontSize="10" HorizontalAlignment="Center"/>
                        <TextBox x:Name="TbTargetMinutes" Width="50" Height="26"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Seconds" FontSize="10" HorizontalAlignment="Center"/>
                        <TextBox x:Name="TbTargetSeconds" Width="50" Height="26"/>
                    </StackPanel>
                </StackPanel>
                <TextBlock Text="" Width="12"/>
                <TextBlock Text="(max 24h)" VerticalAlignment="Center" Foreground="Gray"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <TextBlock Text="Description" Margin="0,0,0,4"/>
            <TextBox x:Name="TbDesc" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="180"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="BtnOk" Content="OK" Width="90" Margin="0,0,8,0"/>
            <Button x:Name="BtnCancel" Content="Cancel" Width="90"/>
        </StackPanel>
    </Grid>
</Window>
