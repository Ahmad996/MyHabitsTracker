<Window x:Class="MyHabitsTracker.Views.EntryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Habit Entry" Height="320" Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <StackPanel>
                <TextBlock Text="Date" Margin="0,0,0,4"/>
                <DatePicker x:Name="DpDate" />
            </StackPanel>

            <StackPanel Margin="16,0,0,0" VerticalAlignment="Bottom">
                <TextBlock x:Name="TBCompleted" Text="Completed" Margin="0,0,0,4"/>
                <CheckBox x:Name="CbCompleted" Content="Done" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <StackPanel x:Name="SpNumeric" Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8" Visibility="Collapsed">
            <TextBlock Text="Numeric value:" VerticalAlignment="Center" Width="110"/>
            <TextBox x:Name="TbNumeric" Width="180" Height="26"/>
            <TextBlock Text="" Width="12"/>
            <TextBlock Text="(numerical habit)" VerticalAlignment="Center" Foreground="Gray"/>
        </StackPanel>

        <StackPanel x:Name="SpDuration" Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8" Visibility="Collapsed">
            <TextBlock Text="Duration:" VerticalAlignment="Center" Width="110"/>
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,8,0">
                    <TextBlock Text="Hours" FontSize="10" HorizontalAlignment="Center"/>
                    <TextBox x:Name="TbHours" Width="50" Height="26"/>
                </StackPanel>
                <StackPanel Margin="0,0,8,0">
                    <TextBlock Text="Minutes" FontSize="10" HorizontalAlignment="Center"/>
                    <TextBox x:Name="TbMinutes" Width="50" Height="26"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Seconds" FontSize="10" HorizontalAlignment="Center"/>
                    <TextBox x:Name="TbSeconds" Width="50" Height="26"/>
                </StackPanel>
            </StackPanel>
            <TextBlock Text="" Width="12"/>
            <TextBlock Text="(max 24h)" VerticalAlignment="Center" Foreground="Gray"/>
        </StackPanel>

        <!-- Note -->
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <TextBlock Text="Note" Margin="0,0,0,4"/>
            <TextBox x:Name="TbNote" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="120"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="BtnOk" Content="OK" Width="90" Margin="0,0,8,0"/>
            <Button x:Name="BtnCancel" Content="Cancel" Width="90"/>
        </StackPanel>
    </Grid>
</Window>
